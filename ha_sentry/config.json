{
  "name": "Home Assistant Sentry",
  "version": "2.0.05",
  "slug": "ha_sentry",
  "description": "Daily review of all system updates (Core, Supervisor, OS, Add-ons, Integrations) with AI-powered conflict detection",
  "url": "https://github.com/ian-morgan99/Home-Assistant-Sentry",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "auto",
  "auto_update": true,
  "init": false,
  "hassio_api": true,
  "hassio_role": "manager",
  "homeassistant_api": true,
  "ingress": true,
  "ingress_port": 8099,
  "panel_icon": "mdi:family-tree",
  "panel_title": "Sentry",
  "panel_admin": true,
  "ports": {
    "8099/tcp": 8099
  },
  "ports_description": {
    "8099/tcp": "Dependency visualization web interface"
  },
  "options": {
    "ai_enabled": true,
    "ai_provider": "openai",
    "ai_endpoint": "http://localhost:11434",
    "ai_model": "gpt-3.5-turbo",
    "api_key": "",
    "check_schedule": "02:00",
    "create_dashboard_entities": true,
    "check_all_updates": true,
    "check_addons": true,
    "check_hacs": true,
    "safety_threshold": 0.7,
    "log_level": "standard",
    "obfuscate_logs": true,
    "enable_dependency_graph": true,
    "save_reports": true,
    "enable_web_ui": true,
    "port": 8099,
    "custom_integration_paths": [],
    "monitor_logs_after_update": false,
    "log_check_lookback_hours": 24,
    "enable_installation_review": false,
    "installation_review_schedule": "weekly",
    "installation_review_scope": "full"
  },
  "schema": {
    "ai_enabled": "bool",
    "ai_provider": "list(openai|ollama|lmstudio|openwebui)",
    "ai_endpoint": "str",
    "ai_model": "str",
    "api_key": "password?",
    "check_schedule": "str",
    "create_dashboard_entities": "bool",
    "check_all_updates": "bool",
    "check_addons": "bool",
    "check_hacs": "bool",
    "safety_threshold": "float(0.0,1.0)",
    "log_level": "list(minimal|standard|maximal)",
    "obfuscate_logs": "bool",
    "enable_dependency_graph": "bool",
    "save_reports": "bool",
    "enable_web_ui": "bool",
    "port": "port",
    "custom_integration_paths": ["str?"],
    "monitor_logs_after_update": "bool",
    "log_check_lookback_hours": "int(1,168)",
    "enable_installation_review": "bool",
    "installation_review_schedule": "list(weekly|monthly|manual)",
    "installation_review_scope": "list(full|integrations|automations)"
  },
  "image": "ghcr.io/ian-morgan99/home-assistant-sentry-{arch}"
}
